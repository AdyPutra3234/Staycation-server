<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addButtonModal">
            +
        </button>
    </div>
    
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach((category, index) => { %>
                        <tr>
                            <th><%= ++index %></th>
                            <th><%= category.name %></th>
                            <th>
                                <form action="/admin/category/<%= category._id %>?_method=DELETE" method="post">
                                    <button type="button" data-id="<%= category.id %>" data-name="<%= category.name %>" class="btn btn-warning btn-circle btn-update"><i class="fas fa-edit"></i></button>
                                    <button type="submit" class="btn btn-danger btn-circle"><i class="fas fa-trash"></i></button>
                                </form>
                            </th>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
