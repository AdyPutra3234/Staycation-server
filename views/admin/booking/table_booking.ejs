<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>invoice</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Member</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach((booking, index) => { %>
                        <tr>
                            <td><%= ++index %></td>
                            <td><%= booking.invoice %></td>
                            <td><%= booking.startDate.toLocaleString() %></td>
                            <td><%= booking.endDate.toLocaleString() %></td>
                            <td><%= booking.itemId.title %></td>
                            <td><strong>$ </strong><%= booking.itemId.price %></td>
                            <td><%= booking.memberId.firstName %>  <%= booking.memberId.lastName %></td>
                            <% switch (booking.payments.status) {
                                    case 'Process': %>
                                        <td style="color: blue;"><%= booking.payments.status %></td>
                                        <% break;
                              
                                    case 'Accepted': %>
                                        <td style="color: green;"><%= booking.payments.status %></td>
                                        <% break;
                               
                                    case 'Rejected': %>
                                        <td style="color: red;"><%= booking.payments.status %></td>
                                        <% break;
                
                            } %>
                            <td>
                                <a href="/admin/booking/<%= booking._id %>" class="btn btn-info">detail</i></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>