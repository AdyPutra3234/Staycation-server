<div class="tab-pane fade show" id="show-activity" role="tabpanel" aria-labelledby="show-activity-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form action="/admin/item/<%= itemId %>/activity" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control" id="name" placeholder="Feature name" aria-describedby="feature name" required>
                        </div>

                        <div class="form-group">
                            <label for="type">Type</label>
                            <input type="text" name="type" class="form-control" id="type" placeholder="Type" aria-describedby="type" required>
                        </div>

                        <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" name="image" class="form-control" id="image" placeholder="image" aria-describedby="image" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
                
                <div class="col-md-7" >
                    <div class="table-responsive">
                        <table class="table table-bordered" id="tableActivity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image Url</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% activities.forEach((activity, index) => { %>
                                    <tr>
                                        <td><%= ++index %></td>
                                        <td><%= activity.name %></td>
                                        <td><%= activity.type %></td>
                                        <td><img src="http://localhost:3000/<%= activity.imageUrl %>" height="50"/></td>
                                        <td>
                                            <form action="/admin/item/<%= itemId %>/activity/<%= activity._id %>?_method=DELETE" method="post">
                                                <button type="button" data-activityid="<%= activity._id %>" data-itemid="<%= itemId %>" data-name="<%= activity.name %>" data-type="<%= activity.type %>" class="btn btn-warning btn-circle btn-update"><i class="fas fa-edit"></i></button>
                                                <button type="submit" class="btn btn-danger btn-circle"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
