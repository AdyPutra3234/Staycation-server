<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/head.ejs') %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include('../../partials/sidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
              <%- include('../../partials/navbar.ejs') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <%- include('../../partials/alert.ejs') %>

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Items</h1>
                    <!-- End Heading -->

                    <% if (view === "default") { %>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                              <button class="nav-link active" id="show-table-tab" data-toggle="tab" data-target="#show-table" type="button" role="tab" aria-controls="show-table" aria-selected="true">Table</button>
                            </li>
                            <li class="nav-item" role="presentation">
                              <button class="nav-link" id="form-add-tab" data-toggle="tab" data-target="#form-add" type="button" role="tab" aria-controls="form-add" aria-selected="false">Add item</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <%- include('./table_item.ejs') %>
                            <%- include('./add_form_item.ejs') %>
                        </div>
                    <% } else if (view === "show images") {%>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                              <button class="nav-link active" id="show-images-tab" data-toggle="tab" data-target="#show-images" type="button" role="tab" aria-controls="show-images" aria-selected="true">Images</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                           <%- include('./images_item.ejs') %>
                        </div>
                    <% } else if (view === "show form-edit") { %>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                              <button class="nav-link active" id="show-edit-tab" data-toggle="tab" data-target="#form-edit" type="button" role="tab" aria-controls="form-edit" aria-selected="true">Edit Item</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                           <%- include('./edit_form_item.ejs') %>
                        </div>
                    <% } %>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../../partials/footer.ejs') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../partials/script.ejs') %>
    <script>
         CKEDITOR.replace( 'description' );
     </script>
</body>

</html>